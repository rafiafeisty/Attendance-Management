@model Attendance_Management.Controllers.AdminAttendanceViewVM
@{
    ViewData["Title"] = "Manage Attendance Duration";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/attendance.css" asp-append-version="true">
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <title>Attendance Duration</title>
    <style>
        .search-result-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

            .search-result-table th,
            .search-result-table td {
                border: 1px solid #ddd;
                padding: 12px;
                text-align: left;
            }

            .search-result-table th {
                background-color: #f2f2f2;
                font-weight: bold;
            }

            .search-result-table tr:hover {
                background-color: #f5f5f5;
            }

        .assign-btn {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 6px 12px;
            border-radius: 4px;
            cursor: pointer;
        }

            .assign-btn:hover {
                background-color: #0056b3;
            }

        .time-input {
            border: 1px solid #ced4da;
            border-radius: 4px;
            padding: 6px 12px;
            width: 100%;
        }

        .no-results {
            text-align: center;
            padding: 20px;
            color: #666;
            display: none;
        }

        .error-message {
            color: #dc3545;
            margin-top: 10px;
            padding: 10px;
            background-color: #f8d7da;
            border: 1px solid #f5c6cb;
            border-radius: 4px;
        }

        .success-message {
            color: #28a745;
            margin-top: 10px;
            padding: 10px;
            background-color: #d4edda;
            border: 1px solid #c3e6cb;
            border-radius: 4px;
        }
    </style>
</head>

<body>
    <input type="hidden" id="selectedTeacherId" />
    <input type="hidden" id="selectedCourseId" />
    <input type="hidden" id="selectedProgramId" />
    <input type="hidden" id="selectedSessionId" />
    <input type="hidden" id="selectedSectionId" />

    <div class="header">
        <div class="hamburger" id="hamburger">
            <div></div>
            <div></div>
            <div></div>
        </div>
        <div class="info">
            <p>@User.Identity?.Name</p>
        </div>
    </div>
    <div class="main">
        <div class="side">
            <div class="side-items">
                <span class="side-head"><a asp-controller="Login" asp-action="dashboardA">Admin Portal</a></span>
                <span><i class="fas fa-chalkboard-teacher"></i><a asp-controller="Manage" asp-action="manageT">Manage Teachers</a></span>
                <span><i class="fas fa-book"></i><a asp-controller="Manage" asp-action="manageS">Manage Student</a></span>
                <span><i class="fas fa-id-badge"></i><a asp-controller="Manage" asp-action="managebadge">Manage Badge</a></span>
                <span><i class="fas fa-users"></i><a asp-controller="Manage" asp-action="managesection">Manage Section</a></span>
                <span><i class="fas fa-clock"></i><a asp-controller="Attendance" asp-action="attendanceA">Attendance Duration</a></span>
                <span><i class="fas fa-key"></i><a asp-controller="Password" asp-action="PasswordChangingA">Change Password</a></span>
                <span><i class="fas fa-table"></i><a asp-controller="Timetable" asp-action="ShowTimetableA">View Timetable</a></span>
                <span><i class="fa-solid fa-right-from-bracket"></i><a asp-controller="Login" asp-action="Logout">Logout</a></span>
            </div>
        </div>
        <div class="main-body">
            <div class="contents container-fluid">
                <div class="row g-3 align-items-end">

                    <!-- Program -->
                    <div class="col-12 col-md-6 col-lg-3">
                        <label class="form-label">Program</label>
                        <select class="form-select" id="programSelect">
                            <option value="">Select Program</option>
                            @foreach (var program in Model.Programs)
                            {
                                <option value="@program.ProgramId">@program.ProgramName</option>
                            }
                        </select>
                    </div>

                    <!-- Session (Badge) -->
                    <div class="col-12 col-md-6 col-lg-3">
                        <label class="form-label">Session/Badge</label>
                        <select class="form-select" id="sessionSelect">
                            <option value="">Select Session</option>
                            @foreach (var session in Model.Sessions)
                            {
                                <option value="@session.SessionId" data-program="@session.ProgramId">@session.SessionName</option>
                            }
                        </select>
                    </div>

                    <!-- Section -->
                    <div class="col-12 col-md-6 col-lg-3">
                        <label class="form-label">Section</label>
                        <select class="form-select" id="sectionSelect">
                            <option value="">Select Section</option>
                            @foreach (var sections in Model.Sections)
                            {
                                <option value="@sections.SectionId" data-session="@sections.SessionId">@sections.SectionName</option>
                            }
                        </select>
                    </div>

                    <!-- Course -->
                    <div class="col-12 col-md-6 col-lg-3">
                        <label class="form-label">Course</label>
                        <select class="form-select" id="courseSelect">
                            <option value="">Select Course</option>
                            <!-- Courses will be populated dynamically based on session -->
                        </select>
                    </div>

                    <!-- Button -->
                    <div class="col-12 col-md-12 col-lg-12 d-grid printing">
                        <button onclick="fetchAttendance()">Search</button>
                    </div>

                </div>
            </div>

            <!-- No Results Message -->
            <div id="noResults" class="no-results">
                <p>No attendance records found. Please select all filters and click Search.</p>
            </div>

            <!-- Search Results Table -->
            <div id="searchResult" style="display: none" class="dummy">
                <table class="search-result-table">
                    <thead>
                        <tr>
                            <th>Teacher Name</th>
                            <th>Day</th>
                            <th>Current Duration</th>
                            <th>Edit Duration</th>
                        </tr>
                    </thead>
                    <tbody id="attendanceBody">
                        <!-- Results will be populated here -->
                    </tbody>
                </table>
            </div>
            <div class="custom-alert" id="loginAlert" style="display:none">
                <i class="fas fa-exclamation-circle"></i>
                <span id="alertMessage"></span>
                <button onclick="closeAlert()">×</button>
            </div>
            <!-- Edit Attendance Time Modal -->
            <div class="modal fade" id="editTimeModal" tabindex="-1" aria-labelledby="editTimeModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="editTimeModalLabel">Edit Attendance Time</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <div id="editTimeMessage" class="modal-message"></div>

                            <input type="hidden" id="editTeacherId" />
                            <input type="hidden" id="editCourseId" />
                            <input type="hidden" id="editProgramId" />
                            <input type="hidden" id="editSessionId" />
                            <input type="hidden" id="editSectionId" />

                            <div class="mb-3">
                                <label class="form-label">Teacher</label>
                                <input type="text" class="form-control" id="editTeacherName" readonly />
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Course</label>
                                <input type="text" class="form-control" id="editCourseName" readonly />
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Day</label>
                                <input type="text" class="form-control" id="editDay" readonly />
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Start Time</label>
                                <input type="time" class="form-control" id="editStartTime" />
                            </div>

                            <div class="mb-3">
                                <label class="form-label">End Time</label>
                                <input type="time" class="form-control" id="editEndTime" />
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary" onclick="saveDuration()">Save Changes</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
            function showAlert(message, type = "danger") {
            const alertBox = document.getElementById("loginAlert");
            const alertMessage = document.getElementById("alertMessage");

            // reset classes
            alertBox.classList.remove("success");

            // apply success if needed
            if (type === "success") {
                alertBox.classList.add("success");
            }

            alertMessage.innerText = message;
            alertBox.style.display = "flex";

            setTimeout(() => {
                alertBox.style.display = "none";
            }, 4000);
        }

        function closeAlert() {
            document.getElementById("loginAlert").style.display = "none";
        }
    </script>


    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script>
        // Sidebar toggle
        const hamburger = document.getElementById("hamburger");
        const sidebar = document.querySelector(".side");
        hamburger.addEventListener("click", () => {
            sidebar.classList.toggle("active");
        });

        // Filter Sessions when Program changes
        const programSelect = document.getElementById('programSelect');
        const sessionSelect = document.getElementById('sessionSelect');
        const sectionSelect = document.getElementById('sectionSelect');
        const courseSelect = document.getElementById('courseSelect');

        programSelect.addEventListener('change', () => {
            const programId = programSelect.value;

            // Show all sessions first
            Array.from(sessionSelect.options).forEach(opt => {
                opt.style.display = 'block';
            });

            // Hide sessions that don't belong to selected program
            Array.from(sessionSelect.options).forEach(opt => {
                if (opt.value && opt.dataset.program !== programId) {
                    opt.style.display = 'none';
                }
            });

            sessionSelect.value = '';
            sectionSelect.value = '';
            courseSelect.innerHTML = '<option value="">Select Course</option>';
            hideResults();
        });

        sessionSelect.addEventListener('change', () => {
            const sessionId = sessionSelect.value;

            // Show all sections first
            Array.from(sectionSelect.options).forEach(opt => {
                opt.style.display = 'block';
            });

            // Hide sections that don't belong to selected session
            Array.from(sectionSelect.options).forEach(opt => {
                if (opt.value && opt.dataset.session !== sessionId) {
                    opt.style.display = 'none';
                }
            });

            sectionSelect.value = '';

            // Load courses for this session
            if (sessionId) {
                loadCoursesBySession(sessionId);
            } else {
                courseSelect.innerHTML = '<option value="">Select Course</option>';
            }

            hideResults();
        });

        sectionSelect.addEventListener('change', () => {
            hideResults();
        });

        courseSelect.addEventListener('change', () => {
            hideResults();
        });

        async function loadCoursesBySession(sessionId) {
            try {
                courseSelect.innerHTML = '<option value="">Loading courses...</option>';
                courseSelect.disabled = true;

                const response = await fetch(`/Attendance/GetCoursesBySession?sessionId=${sessionId}`);
                if (!response.ok) {
                    throw new Error('Failed to load courses');
                }

                const courses = await response.json();

                courseSelect.innerHTML = '<option value="">Select Course</option>';
                courseSelect.disabled = false;

                if (courses && courses.length > 0) {
                    courses.forEach(course => {
                        const option = document.createElement('option');
                        option.value = course.courseId;
                        option.textContent = course.courseName;
                        courseSelect.appendChild(option);
                    });
                } else {
                    const option = document.createElement('option');
                    option.value = '';
                    option.textContent = 'No courses available for this session';
                    courseSelect.appendChild(option);
                    courseSelect.disabled = true;
                }
            } catch (error) {
                console.error('Error loading courses:', error);
                courseSelect.innerHTML = '<option value="">Error loading courses</option>';
                courseSelect.disabled = true;
            }
        }

        function hideResults() {
            document.getElementById("searchResult").style.display = "none";
            document.getElementById("noResults").style.display = "none";
        }

        function showNoResults() {
            document.getElementById("searchResult").style.display = "none";
            document.getElementById("noResults").style.display = "block";
        }

        function showResults() {
            document.getElementById("searchResult").style.display = "block";
            document.getElementById("noResults").style.display = "none";
        }

        async function fetchAttendance() {
            const programId = document.getElementById("programSelect").value;
            const sessionId = document.getElementById("sessionSelect").value;
            const sectionId = document.getElementById("sectionSelect").value;
            const courseId = document.getElementById("courseSelect").value;

            // Validate all fields are selected
            if (!programId || !sessionId || !sectionId || !courseId) {
                showAlert("Please select all filters (Program, Session, Section, and Course)","danger");
                return;
            }

            try {
                const response = await fetch('/Attendance/FetchAttendanceAdmin', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded'
                    },
                    body: `programId=${programId}&sessionId=${sessionId}&sectionId=${sectionId}&courseId=${courseId}`
                });

                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }

                const data = await response.json();
                renderAttendanceTable(data);
            } catch (error) {
                console.error('Error fetching attendance:', error);
                showNoResults();
            }
        }

        function renderAttendanceTable(attendanceRecords) {
            const attendanceBody = document.getElementById("attendanceBody");
            attendanceBody.innerHTML = "";

            if (!attendanceRecords || attendanceRecords.length === 0) {
                showNoResults();
                return;
            }

            showResults();

            attendanceRecords.forEach(record => {
                const row = document.createElement("tr");
                row.id = `attendance-row-${record.teacherId}-${record.courseId}`;
                row.innerHTML = `
                    <td>${record.teacherName || 'N/A'}</td>
                    <td>${record.day || 'N/A'}</td>
                    <td>${formatTime(record.startTime)} - ${formatTime(record.endTime)}</td>
                    <td>
                        <button class="assign-btn"
                                data-bs-toggle="modal"
                                data-bs-target="#editTimeModal"
                                onclick="setEditTimeData(
                                    ${record.teacherId},
                                    '${record.teacherName || ''}',
                                    ${record.courseId},
                                    '${record.courseName || ''}',
                                    ${record.programId},
                                    ${record.sessionId},
                                    ${record.sectionId},
                                    '${record.day || ''}',
                                    '${formatTimeForInput(record.startTime)}',
                                    '${formatTimeForInput(record.endTime)}'
                                )">
                            Edit
                        </button>
                    </td>
                `;
                attendanceBody.appendChild(row);
            });
        }

        function formatTime(timeOnly) {
            if (!timeOnly) return 'N/A';

            // Convert TimeOnly to readable format
            const timeStr = timeOnly.toString();
            if (timeStr.includes(':')) {
                const [hours, minutes] = timeStr.split(':');
                const hour = parseInt(hours);
                const ampm = hour >= 12 ? 'p.m' : 'a.m';
                const displayHour = hour % 12 || 12;
                return `${displayHour}:${minutes.padStart(2, '0')} ${ampm}`;
            }
            return timeStr;
        }

        function formatTimeForInput(timeOnly) {
            if (!timeOnly) return '';

            // Convert TimeOnly to HH:mm format for input[type="time"]
            const timeStr = timeOnly.toString();
            if (timeStr.includes(':')) {
                return timeStr.substring(0, 5); // Get HH:mm part
            }
            return '';
        }

        function setEditTimeData(teacherId, teacherName, courseId, courseName, programId, sessionId, sectionId, day, startTime, endTime) {
            document.getElementById("editTeacherId").value = teacherId;
            document.getElementById("editTeacherName").value = teacherName;
            document.getElementById("editCourseId").value = courseId;
            document.getElementById("editCourseName").value = courseName;
            document.getElementById("editProgramId").value = programId;
            document.getElementById("editSessionId").value = sessionId;
            document.getElementById("editSectionId").value = sectionId;
            document.getElementById("editDay").value = day;
            document.getElementById("editStartTime").value = startTime;
            document.getElementById("editEndTime").value = endTime;

            // Clear any previous messages
            document.getElementById("editTimeMessage").innerHTML = '';
            document.getElementById("editTimeMessage").className = 'modal-message';
        }

            async function saveDuration() {
            const teacherId = document.getElementById("editTeacherId").value;
            const courseId = document.getElementById("editCourseId").value;
            const programId = document.getElementById("editProgramId").value;
            const sessionId = document.getElementById("editSessionId").value;
            const sectionId = document.getElementById("editSectionId").value;
            const startTime = document.getElementById("editStartTime").value;
            const endTime = document.getElementById("editEndTime").value;
            const messageDiv = document.getElementById("editTimeMessage");

            messageDiv.innerHTML = '';
            messageDiv.className = 'modal-message';

            if (!startTime || !endTime) {
                messageDiv.innerHTML = 'Please select both start and end times';
                messageDiv.className = 'modal-message error-message';
                return;
            }

            if (startTime >= endTime) {
                messageDiv.innerHTML = 'End time must be after start time';
                messageDiv.className = 'modal-message error-message';
                return;
            }

            try {
                const response = await fetch('/Attendance/UpdateAttendanceTime', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded'
                    },
                    body: `programId=${programId}&sessionId=${sessionId}&sectionId=${sectionId}&courseId=${courseId}&teacherId=${teacherId}&startTime=${encodeURIComponent(startTime)}&endTime=${encodeURIComponent(endTime)}`
                });

                const result = await response.text();

                if (result === "Ok") {
                    messageDiv.innerHTML = 'Attendance time updated successfully!';
                    messageDiv.className = 'modal-message success-message';

                    // Update the table row
                    updateTableRow(teacherId, courseId, startTime, endTime);

                    // Close modal after 1.5 seconds
                    setTimeout(() => {
                        const modal = bootstrap.Modal.getInstance(document.getElementById('editTimeModal'));
                        if (modal) {
                            modal.hide();
                        }
                        messageDiv.innerHTML = '';
                    }, 1500);
                } else if (result === "NoAttendanceRecords") {
                    messageDiv.innerHTML = 'No attendance has been marked today for this teacher. Please mark attendance first.';
                    messageDiv.className = 'modal-message error-message';
                } else if (result === "TeacherNotAssigned") {
                    messageDiv.innerHTML = 'This teacher is not assigned to teach this course to this section.';
                    messageDiv.className = 'modal-message error-message';
                } else {
                    messageDiv.innerHTML = 'Error: ' + result;
                    messageDiv.className = 'modal-message error-message';
                }
            } catch (error) {
                console.error('Error updating duration:', error);
                messageDiv.innerHTML = 'Error updating duration. Please try again.';
                messageDiv.className = 'modal-message error-message';
            }
        }

        function updateTableRow(teacherId, courseId, startTime, endTime) {
            const row = document.getElementById(`attendance-row-${teacherId}-${courseId}`);
            if (row) {
                const formattedStart = formatDisplayTime(startTime);
                const formattedEnd = formatDisplayTime(endTime);

                const cells = row.getElementsByTagName('td');
                if (cells.length >= 3) {
                    cells[2].textContent = `${formattedStart} - ${formattedEnd}`;
                }
            }
        }

        function formatDisplayTime(timeStr) {
            const [hours, minutes] = timeStr.split(':');
            const hour = parseInt(hours);
            const ampm = hour >= 12 ? 'p.m' : 'a.m';
            const displayHour = hour % 12 || 12;
            return `${displayHour}:${minutes} ${ampm}`;
        }

        // Clear modal when closed
        document.getElementById('editTimeModal').addEventListener('hidden.bs.modal', function () {
            document.getElementById("editTimeMessage").innerHTML = '';
            document.getElementById("editTeacherId").value = '';
            document.getElementById("editTeacherName").value = '';
            document.getElementById("editCourseId").value = '';
            document.getElementById("editCourseName").value = '';
            document.getElementById("editProgramId").value = '';
            document.getElementById("editSessionId").value = '';
            document.getElementById("editSectionId").value = '';
            document.getElementById("editDay").value = '';
            document.getElementById("editStartTime").value = '';
            document.getElementById("editEndTime").value = '';
        });

        // Initialize page
        document.addEventListener('DOMContentLoaded', function() {
            hideResults();
            showNoResults();
        });
    </script>
</body>
</html>